package caculadora;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.FlowLayout;
import java.awt.Font;

public class Main {
    public static void main(String[] args) {
        JFrame frame = new JFrame("Janela Teste");
        frame.setSize(400, 300);
        frame.setVisible(true);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLocationRelativeTo(null);
        
        JLabel label = new JLabel("Calculadora");
        
        frame.add(label);
        frame.setLayout(new FlowLayout(FlowLayout.CENTER));
        //label.setHorizontalAlignment(JLabel.CENTER);   COLOCA  TEXTO NO MEIO DA TELA
        Font fonteM = new Font(label.getFont().getName(), Font.PLAIN, 30);
        label.setFont(fonteM);
        

    }
}
